<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.htwg.moc.htwg_noten_app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.htwg.moc.htwg_noten_app.DegreeListActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.htwg.moc.htwg_noten_app.GradeDetailActivity"
            android:label="@string/title_degree_detail"
            android:parentActivityName=".DegreeListActivity"
            android:theme="@android:style/Theme.Holo.Light" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DegreeListActivity" />
        </activity>
        <activity
            android:name="de.htwg.moc.htwg_noten_app.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="de.htwg.moc.htwg_noten_app.DegreeListActivity"
            android:theme="@android:style/Theme.Holo.Light" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.htwg.moc.htwg_noten_app.DegreeListActivity" />
        </activity>
    </application>

</manifest>